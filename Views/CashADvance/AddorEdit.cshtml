@model MyApplication.Models.MMvcCashAdvance

@{
    ViewBag.Title = "CashAdvance";
    Layout = "~/Views/Shared/Login.cshtml";
}
<div class=" container">
    <div class="jumbotron " style="width: 500px; height: 400px;justify-items:center!important;margin-left:300px; align-content:space-around !important">


        @using (Html.BeginForm("AddorEditPost", "CashADvance", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4 class="text-center">Cash Advance Request</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                <label class="log-field-validatio-error " style=" color: red; padding-left:40px">
                    @Html.DisplayFor(model => model.LOginErrorMessage)
                </label>



                <div class="form-group">
                    <div class="col-md-10">
                        <label>Request Amount  </label>
                        @Html.EditorFor(model => model.amount, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.amount, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">
                    <div class=" col-md-10">
                        <input type="submit" value="Request" class="btn btn-primary" />
                    </div>
                </div>
            </div>



        }

    </div>

</div>

<div>
    @Html.ActionLink("Back to Home", "Log", "Login")
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

