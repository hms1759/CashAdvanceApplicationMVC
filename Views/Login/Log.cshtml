@model MyApplication.Models.LoginModel

@{
    ViewBag.Title = "Log";
    Layout = "~/Views/Shared/Login.cshtml";
}
<div class=" container">
    <div class="jumbotron " style="width: 500px; height: 400px;justify-items:center!important;margin-left:300px; align-content:space-around !important">




        <div>
            @using (Html.BeginForm("LogIn", "LogIn", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

            <div class="form-horizontal ">
                <br /> <div>
                    <h4 class="text-center"><strong>Login to Proceed</strong></h4>

                    <label class="log-field-validatio-error " style=" color: red; padding-left:20px">
                        @Html.DisplayFor(model => model.LOginErrorMessage)
                    </label>

               
            </div>

                
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group ">
                    <div class="col-md-10">
                        <label>Username  </label>
                        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                    </div>
                </div>



                <div class="form-group">
                    <div class="col-md-10">
                        <label>Password </label>
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class=" col-md-10">
                        <input type="submit" value="Signin" class="btn btn-primary" />
                    </div>
                </div>
            </div>

            }
        </div>

    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
